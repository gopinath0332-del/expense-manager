# Environment Variables — Expense Manager
# Copy this file to .env and fill in your Firebase project credentials.
# NEVER commit your real .env file to version control.

# ----- Firebase Configuration -----
# Get these from https://console.firebase.google.com → Project Settings → Your apps → Web app
VITE_FIREBASE_API_KEY=your_api_key_here
VITE_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
VITE_FIREBASE_APP_ID=your_app_id

# ----- Optional: Use Firebase Emulator for local development -----
# Set to "true" to connect to local Firestore emulator instead of production
VITE_USE_FIREBASE_EMULATOR=false

# ----- PDF Password -----
# Default password for password-protected PDF reports.
# Users can also enter password manually in the upload form.
VITE_PDF_DEFAULT_PASSWORD=
